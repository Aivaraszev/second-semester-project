<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.LogInViewController">
   <children>
      <VBox fx:id="vBox" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
              <children>
                  <Label text="Log In">
                      <VBox.margin>
                          <Insets bottom="20.0" top="20.0" />
                      </VBox.margin>
                      <font>
                          <Font name="System Bold" size="25.0" />
                      </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                      <children>
                          <Label prefWidth="75.0" text="Email">
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                          <TextField fx:id="email">
                              <HBox.margin>
                                  <Insets left="25.0" />
                              </HBox.margin>
                          </TextField>
                      </children>
                      <VBox.margin>
                          <Insets />
                      </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                      <children>
                          <Label prefWidth="75.0" text="Password">
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                          <PasswordField fx:id="password">
                              <HBox.margin>
                                  <Insets left="25.0" />
                              </HBox.margin>
                          </PasswordField>
                      </children>
                  </HBox>
            <Label fx:id="error" alignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#onLogIn" prefHeight="30.0" prefWidth="100.0" text="Log In">
                      <VBox.margin>
                          <Insets top="25.0" />
                      </VBox.margin>
                  </Button>
            <Button mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="30.0" prefWidth="100.0" text="Exit">
               <VBox.margin>
                  <Insets left="450.0" top="90.0" />
               </VBox.margin>
            </Button>
              </children>
          </VBox>
   </children>
</StackPane>
